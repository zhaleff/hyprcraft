/*****----- Configuration -----*****/
configuration {
    show-icons:                 true;
    drun-display-format:        "{name}";
}

/*****----- Global Properties -----*****/
* {
    font:                        "JetBrains Mono Nerd Font 9";
    background:                  #11111b;
    background-alt:              #313244;
    foreground:                  #eff1f5;
    selected:                    #cba6f7;
}

/*****----- Main Window -----*****/
window {
    fullscreen:                  false;
    location:                    center;
    width:                       100%;
    height:                      61%;
    border-radius:               6px;
    padding:                     10px;
    background-color:            transparent;
}

/*****----- Main Layout -----*****/
mainbox {
    border-radius:               6px;

    spacing:                     0px;
    orientation:                 vertical;
    children:                    [ "listbox" ];
}

listbox {
    spacing:                     0px;
    orientation:                 vertical;
    children:                    [ "listview" ];
}

/*****----- Listview: Icon Grid -----*****/
listview {
    columns:                     3;
    lines:                       5;
    layout:                      vertical;
    fixed-columns:               true;
    fixed-height:                true;
    dynamic:                     false;
    spacing:                     10px;
    padding:                     8px;
    border-radius:               6px;
    background-color:            #1e1e2e;
}

/*****----- Element Styling -----*****/
element {
    padding:                     0px 10px 10px 10px;
    border-radius:               6px;
    background-color:            transparent;
    horizontal-align:            0.5;
}
element selected.normal {
    background-color:            @selected;
}
element-icon {
    size:                        400px;
    height:                      120px;
    border-radius:               6px;
    background-color:            transparent;
    vertical-align:              0.5;
    padding:                     2px;
}
element-text {
    text-color:                  transparent;
    background-color:            transparent;
    padding:                     0px;
    font:                        "JetBrains Mono Nerd Font 0";
}
